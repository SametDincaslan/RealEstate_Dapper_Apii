@model List<ResultPopularLocationDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
    int count = 0;
}

<style>
    img{
        border-radius:50%; <!-- Resmin yuvarlak Olmasını sağlar -->
    }

</style>
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Servis Listesi</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Lokasyon Resim ve İsimleri</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <th scope="row">@count</th>
                                    <td><img src="@item.PopularLocationImageUrl"width="50"height="50"/> @item.PopularLocationCityName </td>
                                    <td><a href="/PopularLocation/DeletePopularLocation/@item.PopularLocationID" onclick="return confirm('Silmek istediğinize emin misiniz?')" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/PopularLocation/UpdatePopularLocation/@item.PopularLocationID" class="btn btn-outline-success">Güncelle</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/PopularLocation/CreatePopularLocation/" class="btn btn-outline-info"> Yeni Popüler Lokasyon Girişi</a>
                </div>
            </div>
        </div>
    </div>
</div>
