@model CreatePopularLocationDto
@{
    ViewData["Title"] = "CreatePopularLocation";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Yeni Hİzmet Ekleme Sayfası</h6>
                <form method="post">
                    <label>Lokasyon Adı</label>
                    <input type="text" asp-for="PopularLocationCityName" class="form-control" />
                    <br />
                    <label>Lokasyon Resim Uzantısı</label>
                    <input type="text" asp-for="PopularLocationImageUrl" class="form-control" />
                    <br />
                    <button class="btn btn-primary">Hizmeti Kaydet</button>
                </form>
            </div>
        </div>
    </div>
</div>

